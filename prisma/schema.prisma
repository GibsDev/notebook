generator client {
    provider = "prisma-client-js"
    previewFeatures = ["interactiveTransactions"]
}

datasource db {
    provider = "postgresql"
    url      = "postgresql://postgres@localhost:5432/initdb"
}

model Wallet {
    address String  @id @unique
    user    User?   @relation(fields: [userId], references: [id])
    userId  String? @unique
}

model Login {
    username String  @id
    password String
    salt     String
    user     User?   @relation(fields: [userId], references: [id])
    userId   String? @unique
}

model User {
    id            String  @id
    nickname      String?
    collapseNotes Boolean
    email         String?
    notes         Note[]
    login         Login?
    wallet        Wallet?
}

model Note {
    id        String   @id @default(uuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    keyId     String?
    title     String?
    body      String?
    user      User     @relation(fields: [userId], references: [id])
    userId    String
    fields    Field[]
}

model Field {
    id     String  @id @default(uuid())
    note   Note    @relation(fields: [noteId], references: [id])
    noteId String
    index  Int
    name   String
    data   String
    secret Boolean
}
